<div class="container">
  <div class="row">
    <% @pitches.each do |pitch| %>
    <div class="col-sm-4">
        <div class="card">
          <div class="card-header">
            <%= pitch.student.full_name%>
          </div>
          <div class="card-block">
            <h4 class="card-title"><%= pitch.title%></h4>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>

    </div>
    <% end %>
  </div>
</div>

<div class="container"><div class='row'>
  <% Student.all.each do |student| %>
    <div class="col-md-4">
      <ul class="list-group">
        <li class='list-group-item'><b><%= student.full_name%></b></li>
        <% student.ranks.order('rank ASC').each do |rank |%>
          <li class="list-group-item"><%= rank.rank%>. <%= rank.pitch.title%></li>
        <% end %>
      </ul>
    </div>
  <% end %></div>
</div>
