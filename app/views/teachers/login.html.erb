<div class="container">
  <%= form_for @teacher do |f| %>
    <div class="form-group">
      <%= f.label :email%>
      <%= f.email_field :email, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :password%>
      <%= f.password_field :password, class: 'form-control'%>
    </div>

    <%= f.submit class: "btn btn-default"%>

  <% end %>
</div>
