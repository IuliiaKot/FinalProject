<div class="container">
  <%= form_for :pitch, url: '/pitches'  do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placaholder: 'Working Title'%>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', maxlength: "280", rows: '5'%>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>
</div>
