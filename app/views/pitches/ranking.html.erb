<div class="container">
    <div class="row">
      <% if @errors[:notice] %>
        <h5 class='text-center'><%= @errors[:notice].last %></h5>
      <% end %>
      <% @pitches.each do |pitch| %>
        <div class='col-md-6'>
          <div class="card">
            <div class="card-header" value='<%= pitch.id%>'>
              <%= pitch.title %>
              <select class="rank-project custom-select" name="ranks" id='ranks'>
                <option value=""></option>
                <% @pitches.each_with_index do |idx_pitch, idx|%>
                  <% if current_user.find_rank_if_exist(pitch) %>
                    <option value="<%= pitch.id%>" selected="selected"><%=  current_user.find_rank_if_exist(pitch).rank %></option>
                  <% else %>
                    <option value="<%= idx_pitch.id%>"><%=  idx+1 %></option>
                  <% end %>
                <% end %>
              </select>
            </div>
            <div class="card-block">
              <blockquote class="card-blockquote">
                <p><%= truncate(pitch.description, length: 140) %></p>
              </blockquote>
            </div>
          </div>
        </div>

      <% end %>
    </div>

</div>
